{
  "name": "@lyalindotcom/nano-banana-mcp",
  "version": "1.0.2",
  "description": "MCP server for Gemini Flash 2.5 image generation with CLI tools",
  "main": "dist/server/index.js",
  "type": "module",
  "bin": {
    "nano-banana": "./dist/cli/index.js",
    "nano-banana-server": "./dist/server/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "docs/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "dev:server": "tsx src/server/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "start": "node dist/server/index.js",
    "prepublishOnly": "npm run build",
    "postinstall": ""
  },
  "keywords": [
    "mcp",
    "gemini",
    "image-generation"
  ],
  "author": "A Nano Banana Fan",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.17.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "axios": "^1.6.5",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "jsonc-parser": "^3.2.0",
    "ora": "^8.0.1",
    "sharp": "^0.34.3",
    "terminal-link": "^3.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
