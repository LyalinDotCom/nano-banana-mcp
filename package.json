{
  "name": "nano-banana-mcp",
  "version": "1.0.0",
  "description": "MCP server for Gemini Flash 2.5 image generation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:cli",
    "build:server": "tsc",
    "build:cli": "cd cli && npm install && npm run build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "setup": "cd cli && npm run dev setup",
    "postinstall": "npm run build"
  },
  "keywords": ["mcp", "gemini", "image-generation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.17.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/node": "^24.3.1",
    "dotenv": "^17.2.2",
    "sharp": "^0.34.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  }
}
